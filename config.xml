<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "marjon.induction"
        versionCode = "1.0" 
        version   = "1.0">

		<!-- versionCode is optional and Android only -->
	
		<name>Marjon Induction</name>
	
		<description>
			Marjon Induction App: offering help and guidance as you join the University of St Mark &amp; St John. 
		</description>
	
		<author href="http://www.marjon.ac.uk" email="elearning@marjon.ac.uk">
			e-Learning Team - University of St Mark &amp; St John &copy; 2013
		</author>
		
		<preference name="phonegap-version" value="2.5.0" />
		<preference name="fullscreen" value="true" />
		<preference name="orientation" value="default" />
		<preference name="auto-hide-splash-screen" value="true" />
		<!--<preference name="stay-in-webview" value="true" />-->
		<!-- iOS specific preferences -->
		<preference name="prerendered-icon" value="true" />
		<preference name="show-splash-screen-spinner" value="true" />
		<!-- Blackberry specific preferences -->
		<preference name="disable-cursor" value="true" />
		<!-- Android specific preferences -->
		<preference name="load-url-timeout" value="30000" />
		<preference name="splash-screen-duration" value="15000" />
		
		<icon src="icon.png" />
		<gap:splash src="splash.png" />
		
		<access origin="http://*.vimeo.com" />
		<access origin="https://*.vimeo.com" />
		<access origin="http://*.vimeocdn.com" />
		<access uri="http://vimeo.com" subdomains="true" />
		<access uri="http://vimeocdn.com" subdomains="true" />
		<access uri="https://vimeocdn.com" subdomains="true" />
	</widget>